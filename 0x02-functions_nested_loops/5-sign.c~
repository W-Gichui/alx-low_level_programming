#include "main.h"

/**
 * print_sign  - prints the sign of the integer
 * @n: the int to check
 * Retrun: 1 and prints + if greater than 0
 * 0 and prints 0 if n is zero
 * -1 and prints - if n is less than 0
 */
int print_sign(int n)
{
	if (n > 0)
	{
		_putchar('+');
	}
	else if (n == 0)
	{
		_putchar('0');
		return (0);
	}
	else if (n < 0)
	{
		_putchar('-');
		return (-1);
	}
